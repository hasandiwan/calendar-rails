<div class="w-full">
  <% if notice.present? %>
    <p class="absolute left-1/2 transform -translate-x-1/2 py-2 px-3 bg-green-50 mt-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Events</h1>
    <%= link_to 'New event', new_event_path, data: { turbo_frame: 'modal' }, class: "rounded-lg py-3 px-5 mt-2 mr-2 bg-blue-600 text-white block font-medium" %>
  </div>

  <hr class="mt-2 mb-2">

  <div data-controller="calendar" class="text-center"></div>
</div>
